#!/bin/bash

sudo cp set-terminal-theme /usr/local/bin/
sudo cp terminal-theme-monitor /usr/local/bin/
sudo chmod +x /usr/local/bin/set-terminal-theme
sudo chmod +x /usr/local/bin/terminal-theme-monitor

systemd_folder="$HOME"/.config/systemd/user
mkdir -p $systemd_folder
cp terminal-theme-monitor.service $systemd_folder

systemctl --user daemon-reload
